---
const { lists } = Astro.props;
interface ListItem {
    path: string;
    name: string;
}
---

<nav>
    <ol class="bread-ol">
        <li>
            <a href="/">Home</a>
        </li>
        {
            lists.map((list: ListItem, index: number) => (
                <li>
                    {lists.length - 1 !== index ? (
                        <a href={`/${list.path}`}>{list.name}</a>
                    ) : (
                        <span>{list.name}</span>
                    )}
                </li>
            ))
        }
    </ol>
</nav>

<style>
    li {
        display: inline;
    }

    li:not(:first-child)::before {
        content: ">";
        padding: 0 4px;
    }

    span,
    a {
        color: #333333;
    }

    .bread-ol {
        padding-left: 0;
        margin: 1em 0 3em 0;
    }

    @media screen and (max-width: 767px) {
        .bread-ol {
            margin-bottom: 1.5em;
        }
    }
</style>
